<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech BLog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <nav class="nav d-block text-white text-bg-secondary p-3">
        <div class="d-flex justify-content-between">
          <div class="d-flex">
            <a
              class="nav btn text-white text-bg-secondary p-3"
              href="/"
            >Home</a>
            {{#if loggedIn}}
              <a
                class="nav btn text-white text-bg-secondary p-3"
                href="/dashboard"
              >Dashboard</a>
            {{/if}}
          </div>
          <div class="d-flex align-items-center gap-4">
            {{#if loggedIn}}
              <div> Hello {{username}} !</div>
              <button
                class="nav text-white btn text-bg-secondary"
                id="logout"
              >Logout</button>
            {{else}}
              <a
                class="nav btn text-white text-bg-secondary"
                href="/login"
              >Login</a>
            {{/if}}
          </div>
        </div>
        <div class=" d-flex justify-content-between">
          <h1
            class="d-inline rounded border border-secondary-subtle border-opacity-10 p-2 ms-3"
          >The Tech Blog </h1>
        </div>
      </nav>
    </header>
    <main>
      {{{body}}}
    </main>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>